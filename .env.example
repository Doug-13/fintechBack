NODE_ENV=development
PORT=4000

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# JWT
JWT_SECRET=supersecretjwt
JWT_EXPIRES_IN=7d

# S3 / Object Storage (supports AWS S3, MinIO, Wasabi, etc.)
S3_ENDPOINT= # leave empty for AWS; e.g., https://s3.wasabisys.com
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=your-bucket-name
S3_FORCE_PATH_STYLE=false
S3_PUBLIC_BASE_URL= # optional CDN/public URL prefix, e.g., https://cdn.yourdomain.com
